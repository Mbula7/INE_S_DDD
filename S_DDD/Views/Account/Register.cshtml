@model S_DDD.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


        <main aria-labelledby="title" class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg p-4" style="width: 30rem;">
                <h2 id="title" class="text-center">Registar</h2>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="text-center">Creiar nova Conta</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Register" class="btn btn-success w-100" />
                    </div>
                }
            </div>
        </main>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
